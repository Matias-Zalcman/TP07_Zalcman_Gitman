@{
    ViewData["Title"] = @ViewBag.player.Nombre;
}
<div class="container vh-100 vw-100">
    <div class="row comodines">
        <div class="col-sm-3 comodintit">
            <h3>Comodines</h3>
        </div>
        <div class="col-sm-3">
            <div class="comodin on">50</div>
        </div>
        <div class="col-sm-3">
            <div class="comodin off">x2</div>
        </div>
        <div class="col-sm-3">
            <div class="comodin on"><svg xmlns="http://www.w3.org/2000/svg" width="45" height="50" fill="currentColor" class="bi bi-arrow-right" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8z"/>
            </svg></div>
        </div>
    </div>
    <div class="row juego">
        <div class="col-sm-8">
            <h3>Pregunta @ViewBag.pregunta.IdPregunta</h3>
            <div class="pregunta">@ViewBag.pregunta.TextoPregunta</div>
            <div class="row opciones">
                @{
                    foreach(Respuesta respuesta in ViewBag.listaRespuestas)
                    {
                        <div class="col-sm-6 respuesta">
                        <a href='@Url.Action("PreguntaRespondida","Home",new {Opcion1 = @respuesta.OpcionRespuesta})' class="opcion normal">@respuesta.OpcionRespuesta</a>
                        <p class="textoRes">@respuesta.TextoRespuesta</p>
                        </div>
                    }
                }
            </div>
        </div>
        <div class="col-sm-4">
            <div class="contDer">
                <h3>@ViewBag.player.Nombre</h3>
                <div>
                    @{
                        for(int i = 18; i >= 1; i--)
                        {
                            if(i >= JuegoQQSM.DevolverPosicionPozo() && !ViewBag.listaPozo[i].ValorSeguro)
                            {
                                <div class="escalon off">@i - $@ViewBag.listaPozo[i].Importe</div>
                            }
                            if(i >= JuegoQQSM.DevolverPosicionPozo() && ViewBag.listaPozo[i].ValorSeguro)
                            {
                                <div class="escalonSeg off">@i - $@ViewBag.listaPozo[i].Importe</div>
                            }
                            if(i < JuegoQQSM.DevolverPosicionPozo() && !ViewBag.listaPozo[i].ValorSeguro)
                            {
                                <div class="escalon completado">@i - $@ViewBag.listaPozo[i].Importe</div>
                            }
                            if(i < JuegoQQSM.DevolverPosicionPozo() && ViewBag.listaPozo[i].ValorSeguro)
                            {
                                <div class="escalonSeg completado">@i - $@ViewBag.listaPozo[i].Importe</div>
                            }
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>